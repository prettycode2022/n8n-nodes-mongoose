# MongoDB Connection Configuration for Testing
# Copy this file to .env and update with your actual values

# =============================================================================
# SINGLE HOST CONNECTIONS
# =============================================================================

# Local MongoDB (no auth)
MONGO_SINGLE_CONNECTION=mongodb://localhost:27017/test

# Local MongoDB with authentication
MONGO_SINGLE_AUTH_CONNECTION=mongodb://username:password@localhost:27017/database?authSource=admin

# MongoDB Atlas (single connection string)
MONGO_ATLAS_CONNECTION=mongodb+srv://username:password@cluster.mongodb.net/database

# =============================================================================
# REPLICA SET CONNECTIONS
# =============================================================================

# Production Replica Set Configuration
MONGO_HOSTS=host1:27017,host2:27018,host3:27019
MONGO_USERNAME=your_username
MONGO_PASSWORD=your_password
MONGO_DATABASE=your_database
MONGO_REPLICA_SET=rs0

# MongoDB Authentication Options
MONGO_AUTH_SOURCE=your_database
MONGO_AUTH_MECHANISM=SCRAM-SHA-256
MONGO_READ_PREFERENCE=primary

# Local Replica Set (for development)
MONGO_REPLICA_HOSTS=localhost:27017,localhost:27018,localhost:27019
MONGO_REPLICA_USERNAME=
MONGO_REPLICA_PASSWORD=
MONGO_REPLICA_DATABASE=test
MONGO_REPLICA_SET_NAME=rs0

# MongoDB Atlas Replica Set
MONGO_ATLAS_HOSTS=cluster0-shard-00-00.xxxxx.mongodb.net:27017,cluster0-shard-00-01.xxxxx.mongodb.net:27017,cluster0-shard-00-02.xxxxx.mongodb.net:27017
MONGO_ATLAS_USERNAME=your_atlas_username
MONGO_ATLAS_PASSWORD=your_atlas_password
MONGO_ATLAS_DATABASE=your_atlas_database
MONGO_ATLAS_REPLICA_SET=atlas-xxxxx-shard-0

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development
# MONGO_SINGLE_CONNECTION=mongodb://localhost:27017/dev_database

# Staging
# MONGO_HOSTS=staging-host1:27017,staging-host2:27017
# MONGO_USERNAME=staging_user
# MONGO_PASSWORD=staging_password
# MONGO_DATABASE=staging_database

# Production
# MONGO_HOSTS=prod-host1:27017,prod-host2:27017,prod-host3:27017
